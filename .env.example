# Discord bot token (required)
DISCORD_TOKEN=

# Comma-separated list of guild IDs the bot is scoped to (required)
# Example: TEST_GUILD=123456789012345678,987654321098765432
TEST_GUILD=

# External hostname/URL that Steam redirects back to after OpenID auth
# Must be publicly reachable by Steam; no trailing slash
API_URL=localhost

# Port the FastAPI server listens on (must match ports mapping in docker-compose.yml)
APPLICATION_PORT=80

# Steam app and leaderboard IDs
APP_ID=2217000
LEADERBOARD_ID=16200142

# How often (seconds) to refresh the leaderboard cache
CACHE_UPDATE_INTERVAL=120

# How long (minutes) an auth session stays valid
SESSION_DURATION=300
